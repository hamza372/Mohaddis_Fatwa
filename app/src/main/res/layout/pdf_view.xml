<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:id="@+id/fatwaview"
        tools:layout_editor_absoluteX="0dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar8"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".FatwaViewActivity">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="15dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar8">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="17dp"
                    android:background="#d9d9d9"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/urdu_font_family"
                        android:gravity="end"
                        android:text="26124:سوال نمبر"
                        android:textColor="#646464"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/textViewqno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:fontFamily="@font/urdu_font_family"
                        android:gravity="end"
                        android:text="26124:سوال نمبر"
                        android:textColor="#646464"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#d8f3ff"
                        android:fontFamily="@font/urdu_font_family"
                        android:gravity="end"
                        android:lineSpacingExtra="7.5sp"
                        android:padding="5dp"
                        android:textColor="#004a99"
                        android:textSize="10sp"
                        tools:text=" السلام عليكم ورحمة الله وبركاته  کیا فرماتے ہیں علمائے دین مصارف زکوۃ کے بارے میں آیا اس میں ایسا مدرسہ جس میں تعلیم قرآن و حدیث ہونی ہے اور اکثر اطفال مساکین تحصیل عام میں مشغول ہیں اور ان کے اکل و شرب و کتب و لباس کی خبر ذریعہ مہتمم لی جاتی ہے داخل ہے یا نہیں اور ملک زکوۃ اس مدرسہ میں زکوۃ خرچ کر سکتے ہیں یا نہیں بینواجروا۔" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:background="#d9d9d9  "
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="6dp"
                        app:srcCompat="@android:drawable/stat_sys_download" />

                    <TextView
                        android:id="@+id/textViewobs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="6dp"
                        android:fontFamily="@font/urdu_font_family"
                        android:gravity="center_vertical"
                        android:text="321:مشاہدات"
                        android:textColor="#646464"
                        android:textSize="10sp" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tvans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="#d8f3ff"
                android:fontFamily="@font/urdu_font_family"
                android:gravity="end"
                android:lineSpacingExtra="10sp"
                android:text="الجواب بعون الوهاب بشرط صحة السؤال
وعلیکم السلام ورحمة الله وبرکاته!
الحمد لله، والصلاة والسلام علىٰ رسول الله، أما بعد!
غریب اور مسکین  طلبہ بلا شبہ مصرف زکوۃ میں ایسے مدرسہ میں ملک زکوۃ ،زکوۃ خرچ کر سکتے ہیں چاہیں خود آپ بلا واسطہ مہتمم کے ان طلبہ کو دیں یا بواسطہ مہتمم کے ان کو دیں اور مہتمم کو اس امر کی ہدایت کردیں کہ یہ زکوۃ کا روپیہ ہے اس کو صرف غریب و مسکین طلبہ پر خرچ کریں واللہ تعالیٰ اعلم بالصواب کتبہ محمد الرحمٰن المبارکفوری عفا اللہ  عنہ۔(سید محمد نذیر حسین)

     ھذا ما عندی والله اعلم بالصواب"
                android:textColor="#646464"
                android:textSize="12.5sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <TextView
                android:id="@+id/hawale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="47dp"
                android:fontFamily="@font/urdu_font_family"
                android:lineSpacingExtra="10sp"
                android:text="فتاوی نذیریہ\nجلد:2،کتاب الزکوٰۃ والصدقات:صفحہ:89\nمحدث فتویٰ"
                android:textColor="#646464"
                android:textSize="12.5sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvans" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>